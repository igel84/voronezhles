  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :hiperlink %><br />
    <%= f.text_field :hiperlink %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= cktext_area_tag("page[body]", @page.body, :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Easy') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
