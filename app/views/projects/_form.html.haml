= form_for(@project) do |f|
	.field
		= f.label :name
		%br/
		= f.text_field :name
	.field{:style=>'float:left;'}
		= f.label :info
		%br/
		= f.text_area :info
	.field{:style=>'float:right;'}
		= f.label :body
		%br/
		= f.text_area :body
	.clear
	.field{:style=>'float:left;'}
		= f.label :price
		%br/
		= f.number_field :price
	.field{:style=>'float:left;'}
		= f.label :area
		%br/
		= f.number_field :area
	.actions{:style=>'float:right;'}
		%br/
		= f.submit 'сохранить'
	.clear
	%br/
