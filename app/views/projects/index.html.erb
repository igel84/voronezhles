<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Info</th>
    <th>Body</th>
    <th>Price</th>
    <th>Area</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.info %></td>
    <td><%= project.body %></td>
    <td><%= project.price %></td>
    <td><%= project.area %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

